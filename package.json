{
  "name": "crisis-unleashed",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "preinstall": "pnpm install --ignore-scripts",
    "postinstall": "echo \"Skipping postinstall to prevent infinite loop. Run 'pnpm install' in the frontend directory manually.\"",
    "start": "concurrently -n \"BACKEND,FRONTEND\" -c \"bgBlue.bold,bgGreen.bold\" \"cd backend && .\\.venv\\Scripts\\Activate && python -m uvicorn server:app --reload\" \"cd frontend-next && pnpm dev\"",
    "build": "pnpm --filter frontend-next build",
    "test": "cd frontend-next && pnpm test",
    "test:watch": "cd frontend-next && pnpm test:watch",
    "test:coverage": "cd frontend-next && pnpm test:coverage",
    "lint": "pnpm --filter frontend-next lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "setup": "cd frontend-next && pnpm install"
  },
  "workspaces": [
    "frontend",
    "frontend-next",
    "backend"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.84.1",
    "@types/react": "^18.3.23",
    "clsx": "^2.1.1",
    "lucide-react": "^0.536.0",
    "posthog-js": "^1.258.5",
    "react": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7"
  }
}