{
  "name": "crisis-unleashed",
  "version": "1.0.0",
  "private": true,
  "pnpm": {
    "overrides": {
      "nanoid": "3.3.7",
      "next>nanoid": "3.3.7"
    }
  },
  "scripts": {
    "preinstall": "pnpm install --ignore-scripts",
    "start": "concurrently -n \"BACKEND,FRONTEND\" -c \"bgBlue.bold,bgGreen.bold\" \"cd backend && powershell -File .\\start_server.ps1\" \"cd frontend-next && pnpm dev\"",
    "start:backend": "cd backend && powershell -File .\\start_server.ps1",
    "start:frontend": "cd frontend-next && pnpm dev",
    "build": "pnpm --filter frontend-next build",
    "test": "cd frontend-next && pnpm test",
    "test:watch": "cd frontend-next && pnpm test:watch",
    "test:coverage": "cd frontend-next && pnpm test:coverage",
    "lint": "pnpm --filter frontend-next lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "setup": "cd frontend-next && pnpm install"
  },
  "workspaces": [
    "frontend-next",
    "backend"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.0.0",
    "patch-package": "^8.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.84.1",
    "@types/react": "^18.3.23",
    "clsx": "^2.1.1",
    "lucide-react": "^0.536.0",
    "posthog-js": "^1.258.5",
    "react": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "web-vitals": "^5.1.0"
  }
}