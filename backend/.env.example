# Solana Program IDs
SOLANA_MAINNET_PROGRAM_ID=11111111111111111111111111111112
SOLANA_TESTNET_PROGRAM_ID=11111111111111111111111111111112

# ============================================================================
# OUTBOX PROCESSING CONFIGURATION
# ============================================================================
OUTBOX_PROCESSING_INTERVAL=30
OUTBOX_MAX_BATCH_SIZE=10
OUTBOX_MAX_RETRIES=5

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================================================
# PREMIUM RPC PROVIDERS (Optional - for better performance)
# ============================================================================

# Infura (Ethereum networks)
# ETHEREUM_MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
