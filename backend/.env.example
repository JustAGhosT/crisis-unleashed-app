# Crisis Unleashed Backend Environment Configuration
# Copy this file to .env and update with your actual values
#
# üîê SECURITY WARNING:
# - Replace ALL placeholder values before deploying to production
# - Never commit .env files to version control
# - Use strong, randomly generated secrets

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME="Crisis Unleashed Backend"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=development  # development, staging, production

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
HOST=0.0.0.0
PORT=8000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# For local MongoDB
MONGO_URL=mongodb://localhost:27017
# For MongoDB Atlas (replace with your actual credentials!)
# MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
DATABASE_NAME=crisis_unleashed

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# IMPORTANT: Replace with secure secret key!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# Or use: openssl rand -hex 32
SECRET_KEY=your_secure_64_character_hex_string_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Development - allow local frontends (secure default)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]
# Production - set your actual domain(s)
# CORS_ORIGINS=["https://yourdomain.com", "https://app.yourdomain.com"]

# ============================================================================
# BLOCKCHAIN NETWORKS - RPC URLs
# ============================================================================

# Ethereum Mainnet
ETHEREUM_MAINNET_RPC_URL=https://ethereum.publicnode.com
ETHEREUM_MAINNET_WS_URL=wss://ethereum.publicnode.com
ETHEREUM_MAINNET_CHAIN_ID=1

# Ethereum Testnet (Sepolia - Goerli is deprecated)
ETHEREUM_TESTNET_RPC_URL=https://sepolia.drpc.org
ETHEREUM_TESTNET_WS_URL=wss://sepolia.drpc.org
ETHEREUM_TESTNET_CHAIN_ID=11155111

# Etherlink Mainnet
ETHERLINK_MAINNET_RPC_URL=https://node.mainnet.etherlink.com
ETHERLINK_MAINNET_WS_URL=wss://node.mainnet.etherlink.com
ETHERLINK_MAINNET_CHAIN_ID=128123

# Etherlink Testnet (Ghostnet)
ETHERLINK_TESTNET_RPC_URL=https://node.ghostnet.etherlink.com
ETHERLINK_TESTNET_WS_URL=wss://node.ghostnet.etherlink.com
ETHERLINK_TESTNET_CHAIN_ID=42421

# Solana Mainnet
SOLANA_MAINNET_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_MAINNET_WS_URL=wss://api.mainnet-beta.solana.com
SOLANA_MAINNET_CHAIN_ID=101

# Solana Testnet (Devnet)
SOLANA_TESTNET_RPC_URL=https://api.devnet.solana.com
SOLANA_TESTNET_WS_URL=wss://api.devnet.solana.com
SOLANA_TESTNET_CHAIN_ID=103

