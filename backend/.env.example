# Etherlink Mainnet Contracts
ETHERLINK_MAINNET_NFT_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
ETHERLINK_MAINNET_MARKETPLACE_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# Etherlink Testnet Contracts
ETHERLINK_TESTNET_NFT_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
