# Crisis Unleashed Backend Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
# For local MongoDB
MONGO_URL=mongodb://localhost:27017
# For MongoDB Atlas or other cloud services
# MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
DATABASE_NAME=crisis_unleashed

# Security
# Generate a secure secret key for production
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Blockchain Network URLs
# Ethereum mainnet via Infura
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
# Or use a different provider
# ETHEREUM_RPC_URL=https://rpc.ankr.com/eth

# Etherlink (Tezos L2)
ETHERLINK_RPC_URL=https://node.ghostnet.etherlink.com

# Solana (optional)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Smart Contract Addresses (update with your deployed contracts)
ETHEREUM_NFT_CONTRACT_ADDRESS=0x...
ETHEREUM_MARKETPLACE_CONTRACT_ADDRESS=0x...
ETHERLINK_NFT_CONTRACT_ADDRESS=0x...
ETHERLINK_MARKETPLACE_CONTRACT_ADDRESS=0x...

# Outbox Processing Configuration
OUTBOX_PROCESSING_INTERVAL=30
OUTBOX_MAX_BATCH_SIZE=10
OUTBOX_MAX_RETRIES=5

# CORS Configuration
CORS_ORIGINS=*
# For production, use specific origins:
# CORS_ORIGINS=https://your-frontend.com,https://your-admin.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging Configuration
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"