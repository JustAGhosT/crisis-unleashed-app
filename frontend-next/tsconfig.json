{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "frontend-next/src/components/*"
      ],
      "@/lib/*": [
        "frontend-next/src/lib/*"
      ],
      "@/hooks/*": [
        "frontend-next/src/hooks/*"
      ],
      "@/types/*": [
        "frontend-next/src/types/*"
      ],
      "@/utils/*": [
        "frontend-next/src/utils/*"
      ],
      "@/*": [
        "frontend-next/src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}